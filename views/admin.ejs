<body class="my-login-page">
	<section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-md-center h-100">
				<div class="card-wrapper">
					<div class="brand">
					<h1 class="black-text" text-color>Smart<span class="red-text">Health</span>
					</div> 
					<!-- <div class="brand">
						<h1 class="black-text" text-color>Smart<span class="red-text">Health</span></h1> 
						 <img src="img/logo.jpg" alt="logo">
					</div> -->
					<div class="card fat">
						<div class="card-body">
							<h4 class="card-title"> Admin Login</h4>
							<form method="POST" class="my-login-validation" novalidate="">
								<div class="form-group">
									<label for="username">username</label>
									<input id="username" type="username" class="form-control" name="username" value="" required autofocus>
									<div class="invalid-feedback">
									username is invalid
									</div>
								</div>

								<div class="form-group">
									<label for="password">Password
										<a href="forgot" class="float-right">
											Forgot Password?
										</a>
									</label>
									<input id="password" type="password" class="form-control" name="password" required data-eye>
								    <div class="invalid-feedback">
								    	Password is required
							    	</div>
								</div>

								<div class="form-group">
									<div class="custom-checkbox custom-control">
										<input type="checkbox" name="remember" id="remember" class="custom-control-input">
										<label for="remember" class="custom-control-label">Remember Me</label>
									</div>
								</div>

								<div class="form-group m-0">
									<button type="submit" class="btn btn-primary btn-block">
										Login
									</button>
								</div>
								<div class="mt-4 text-center">
									Don't have an account? <a href="register">Create One</a>
								</div>
							</form>
						</div>
					</div>
					<div class="footer">
						Copyright &copy; 2021 &mdash; SmartHeath
					</div>
				</div>
			</div>
		</div>
	</section>